@model DatabaseOperation.tbltrainer
@{
    ViewBag.Title = "EditTrainer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditTrainer</h2>

<div class="col-md-4">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(e=>e.trainer_id)
        <div class="card">
            <div class="card-header">
                <h3 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                    Create Batch
                </h3>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label>Trainer Name</label>
                    @Html.TextBoxFor(e => e.trainer_name, new { @class = "form-control" })
                </div>
                <div class="md-3">
                    <label>Qualification</label>
                    @Html.TextBoxFor(e => e.qualification, new { @class = "form-control" })
                </div>
                <div class="md-3">
                    <label>Gmail</label>
                    @Html.TextBoxFor(e => e.email_address, new { @class = "form-control" })
                </div>
                <div class="md-3">
                    <label>Mobile Number</label>
                    @Html.TextBoxFor(e => e.mobile_number, new { @class = "form-control" })
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" />
                &nbsp;
                @Html.ActionLink("Back", "Index")
            </div>
        </div>
    }
</div>
