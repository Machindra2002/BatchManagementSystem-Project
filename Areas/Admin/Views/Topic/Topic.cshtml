@model DatabaseOperation.tbltraining_topics 
@{
    ViewBag.Title = "Topic";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Topic</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    <h3 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Add Topic</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3"> 
                        <label>Topic Name</label>
                        @Html.TextBoxFor(e => e.topic_name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    @ViewBag.msg
                </div>
            </div>
        }
    </div>
    <div class="col-md-7">
        @{
            int i = 1;
        }
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Sr No</td>
                    <td>Topic Name</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.topics)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.topic_name</td>
                        <td>
                            @Html.ActionLink("Edit", "EditTopic", new { @id = item.topic_id })
                            &nbsp;
                            @Html.ActionLink("Delete", "DeleteTopic", new { @id = item.topic_id })
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>