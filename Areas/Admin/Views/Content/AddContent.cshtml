@model DatabaseOperation.tbltopic_contents
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddContent</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    <h3 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Add Content</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label>Topic Name</label>
                        @Html.DropDownListFor(e => e.topic_id, ViewBag.topic as List<SelectListItem>, "Select Topic", new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label>Content Name</label>
                        @Html.TextBoxFor(e => e.content_name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    @ViewBag.msg

                </div>
            </div>
        }
    </div>
    <div class="col-md-7">
        @{
            int i = 1;
        }
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Sr No</td>
                    <td>Topic Name</td>
                    <td>Content Name</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.content)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.tbltraining_topics.topic_name</td>
                        <td>@item.content_name</td>
                        <td>
                            @Html.ActionLink("Edit", "EditContent", new { @id = item.content_id })
                            &nbsp;
                            @Html.ActionLink("Delete", "DeleteContent", new { @id = item.content_id })
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>
